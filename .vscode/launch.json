    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach (Inspector Protocol)",
            "port": 9229,
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "processId": "${command:PickProcess}",
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/deploy/local.json"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port 5858",
            "address": "localhost",
            "port": 5858
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port 5959",
            "address": "localhost",
            "port": 5959
        }
    ]
}